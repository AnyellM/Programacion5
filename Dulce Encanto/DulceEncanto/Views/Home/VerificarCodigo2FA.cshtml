@{
    ViewData["Title"] = "Verificación de Código 2FA";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        background-color: #faf5ff;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
    }

    .card {
        background-color: #f3e5f5;
        border-radius: 12px;
        padding: 20px;
        max-width: 400px;
        width: 100%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .btn-primary {
        background-color: #4CAF50;
        color: white;
        border: none;
    }

        .btn-primary:hover {
            background-color: #45a049;
        }

    .error-message {
        color: red;
        font-size: 0.9em;
        margin-top: 10px;
    }
</style>

<div class="card">
    <h2 class="mb-4">Verificación de Código</h2>
    <p>Ingrese el código que se ha enviado a su correo electrónico.</p>

    <form method="post" action="/Home/VerificarCodigo2FA">
        <div class="form-group mb-3">
            <label for="codigoIngresado" class="form-label">Código de Verificación:</label>
            <input type="text" id="codigoIngresado" name="codigoIngresado" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Verificar</button>
    </form>

    @if (ViewBag.Error != null)
    {
        <p class="error-message">@ViewBag.Error</p>
    }
</div>

<!-- Bootstrap JS y Popper.js -->
@Html.Raw("<script src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js'></script>")
@Html.Raw("<script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js'></script>")
