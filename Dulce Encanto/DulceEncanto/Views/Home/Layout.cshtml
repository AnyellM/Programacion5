<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif; /* Fuente moderna */
        }

        body {
            background-color: #f5f5f5;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: #333; /* Texto de color oscuro */
        }

        .navbar {
            background-color: #e8d5f7;
            padding: 1rem;
        }

        .nav-link {
            text-decoration: none;
            color: #4c2a85;
            font-size: 1.2rem;
            font-weight: 600;
        }

            .nav-link.active {
                font-weight: bold; /* Negrita para la opción activa */
                color: #6b4f9b;
            }

        footer {
            background-color: #e8d5f7;
            text-align: center;
            padding: 1rem 0;
            bottom: 0;
            width: 100%;
            font-size: 0.9rem;
            color: #4c2a85;
        }

        .content {
            flex: 1;
            padding: 20px;
            font-size: 1.1rem; /* Tamaño de texto cómodo para leer */
        }

        h3 {
            font-size: 1.5rem;
            color: #4c2a85;
            font-weight: 600;
        }

        footer p {
            margin: 0;
            font-size: 0.9rem;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>

    <nav class="navbar">
        <div class="container-fluid d-flex justify-content-start">
            <h3>
                <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"
                   href="/Home/Index">◀ Volver</a>
            </h3>
        </div>
    </nav>

    <!-- Contenido de la página -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <p>© 2024 Pastelería Dulce Encanto, Cartago, Costa Rica</p>
    </footer>

    <!-- Bootstrap JS y Popper.js -->
    @Html.Raw("<script src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js'></script>")
    @Html.Raw("<script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js'></script>")

</body>
</html>
