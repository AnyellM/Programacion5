@{
    ViewData["Title"] = "Conoce sobre nosotros";
    Layout = "~/Views/Home/Layout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nuestra Tienda</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #f8f9fa;
        }

        .card {
            background-color: #f3e5f5;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 20px 0;
        }

        .icon {
            font-size: 30px;
            color: #6c757d;
            display: block;
            margin: 10px auto;
        }

        .info-text {
            text-align: center;
            color: #6c757d;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <div class="d-flex flex-column align-items-center">
            <div class="card w-100" style="max-width: 400px;">
                <h4 class="text-center mb-4">Nuestra ubicación:</h4>
                <div class="info-text">
                    200 metros este del Liceo de Paraíso, <br>
                    Paraíso, Cartago, Costa Rica
                </div>
                <i class="bi bi-geo-alt icon"></i>

                <h4 class="text-center mt-4">Horarios:</h4>
                <div class="info-text">
                    <strong>L-M-J-V:</strong> <br> Abierto de 9:00 a.m a 6:00 p.m <br><br>
                    <strong>X:</strong> <br> Cerrado <br><br>
                    <strong>S-D:</strong> <br> Abierto de 11:00 a.m a 7:30 p.m
                </div>
                <i class="bi bi-clock icon"></i>
            </div>
        </div>
    </div>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet">


    <!-- Bootstrap JS y Popper.js -->
    @Html.Raw("<script src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js'></script>")
    @Html.Raw("<script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js'></script>")
</body>
</html>
